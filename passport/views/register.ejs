<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            padding:0;
            margin:0;
            box-sizing: border-box;
        }
        body{
            background: url(https://media.istockphoto.com/id/1344706317/vector/abstract-blue-green-background-geometric-texture.jpg?s=612x612&w=0&k=20&c=jKpw9_RXYLqq_Hb-u1gt39uDddSILTdphKWC3TpPCCE=),rgba(1,1,1,0.5);
            width:100%;
            height:100vh;
            object-fit: cover;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-blend-mode: darken;
        }
        form{
            background-color: white;
            width:50%;
            text-align: center;
            padding:100px 0;
            border-radius: 12px;
        }
        h1{
            font-size: 30px;
            padding-bottom: 25px;
            color:#019796;
        }
        input{
            width:70%;
            height:45px;
            margin-bottom: 20px;
            border-color: #019796;
            padding-left: 20px;
        }
        button{
            background-color: rgba(127, 255, 212,0.7);
            color:#019796;
            border:none;
            width:70%;
            height:45px;
            font-size: 16px;
        }
        h2{
            color:white;
            margin: 25px 0;
            font-size: 20px;
        }
        a{
            color:#019796;
        }
    </style>
</head>
<body>

    
    <form action="registerData" id="form" method="post">
        <h1> CREATE ACCOUNT </h1>
        <div>
            <input type="text" placeholder="Enter your name" id="name">
        </div>
        <div>
            <input type="email" placeholder="Enter your email" id="email">
        </div>
        <div>
            <input type="password" placeholder="Enter your password" id="password">
        </div>
        <div>
            <!-- <input type="button" value="Submit" id="btn"> -->
             <button id="submit">Submit</button>
        </div>
    </form>

    <h2>Already have an account ?  <a href="/auth/login">Login Now</a></h2>

    <script>

        let form = document.querySelector("#form");
     
        form.addEventListener("submit",(e)=>{
            e.preventDefault()
            let name = document.querySelector("#name").value;
            let email = document.querySelector("#email").value;
            let password = document.querySelector("#password").value;

            console.log(name,email,password);
            fetch("/auth/registerData",{
                method:"post",
                body:JSON.stringify({name,email,password}),
                headers:{
                    "content-type":"application/json;charset=UTF-8"
                }
            }).then((res)=>{ console.log("Data added succesfully...")})
            .catch((error)=>{ console.log("something went wrong ",error)})

            document.querySelector("#name").value = "";
            document.querySelector("#email").value = "";
            document.querySelector("#password").value = "";
        })

    </script>
    
</body>
</html>